<automaton name="moving_platform_vert">
  <param name="up_speed" value="30"/>
  <param name="down_speed" value="-30"/>

  <collider>
    <type name="platform"/>
    <rect x="0" y="0" w="120" h="16"/>
  </collider>
  
  <group name="movement">
    <mode name="down">
      <flow var="y'" value="down_speed"/>
      <edge target="up">
        <guard>
          <colliding othertype="wall"/>
        </guard>
      </edge>
    </mode>
    
    <mode name="up">
      <flow var="y'" value="up_speed"/>
      <edge target="down">
        <guard>
          <colliding othertype="wall"/>
        </guard>
      </edge>
    </mode>
  </group>
</automaton>
